{
	"version": "3.0.0",
	"private": true,
	"author": "Kenton Duprey",
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"scripts": {
		"build": "turbo build",
		"build:admin": "bun --cwd apps/admin build",
		"build:cms": "bun --cwd apps/cms build",
		"build:site": "bun --cwd apps/site build",
		"cy:site": "bun --cwd apps/site cy:run",
		"db:local:studio": "vercel env pull && bun run start:db:local && bun run db:studio",
		"db:prod:studio": "vercel env pull --environment=production && bun run db:studio",
		"db:studio": "cd ./packages/db && dotenv -c -e ../../.env bun x prisma studio",
		"predev:admin": "bun start:db:local",
		"dev:admin": "bun --cwd apps/admin dev",
		"postdev:admin": "bun stop:db:local",
		"dev:cms": "bun --cwd apps/cms dev",
		"dev:site": "bun --cwd apps/site dev",
		"postinstall": "bun --cwd packages/db generate && bun --cwd apps/admin generate-barrels",
		"prisma:deploy": "bun --cwd packages/db deploy",
		"prisma:generate": "bun --cwd packages/db generate",
		"prisma:migrate": "bun --cwd packages/db migrate",
		"prisma:push": "bun --cwd packages/db push",
		"prisma:seed": "bun --cwd packages/db seed",
		"prisma:studio": "bun --cwd packages/db studio",
		"publishContent:cms": "bun --cwd apps/cms publishContent",
		"pullData:cms": "bun --cwd apps/cms pullData",
		"start:admin": "bun --cwd apps/admin start",
		"start:cms": "bun --cwd apps/cms start",
		"start:db:local": "docker compose up -d --build postgres",
		"start:site": "bun --cwd apps/site start",
		"stop:db:local": "docker compose down",
		"temp:preinstall": "bun x only-allow bun",
		"vercel-build": "next build apps/site"
	},
	"prettier": "@bpvs/eslint-config/prettier",
	"devDependencies": {
		"barrelsby": "^2.8.1",
		"eslint": "^8.55.0",
		"prettier": "^3.1.0",
		"prettier-plugin-packagejson": "^2.4.7",
		"typescript": "^5.3.3"
	},
	"packageManager": "bun@8.8.0",
	"prisma": {
		"schema": "./packages/db/prisma/schema.prisma"
	}
}
