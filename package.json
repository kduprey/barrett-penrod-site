{
	"version": "3.0.0",
	"private": true,
	"author": "Kenton Duprey",
	"scripts": {
		"build": "turbo build",
		"build:admin": "pnpm --filter @bpvs/admin build",
		"build:cms": "pnpm --filter @bpvs/cms build",
		"build:site": "pnpm --filter @bpvs/site build",
		"cy:site": "pnpm --filter @bpvs/site cy:run",
		"db:local:studio": "vercel env pull && npm run start:db:local && npm run db:studio",
		"db:prod:studio": "vercel env pull --environment=production && npm run db:studio",
		"db:studio": "cd ./packages/db && dotenv -c -e ../../.env npx prisma studio",
		"predev:admin": "pnpm start:db:local",
		"dev:admin": "pnpm --filter @bpvs/admin dev",
		"postdev:admin": "pnpm stop:db:local",
		"dev:cms": "pnpm --filter @bpvs/cms dev",
		"dev:site": "pnpm --filter @bpvs/site dev",
		"postinstall": "pnpm --filter @bpvs/db generate && pnpm --filter @bpvs/admin generate-barrels",
		"prisma:deploy": "pnpm --filter @bpvs/db deploy",
		"prisma:generate": "pnpm --filter @bpvs/db generate",
		"prisma:migrate": "pnpm --filter @bpvs/db migrate",
		"prisma:push": "pnpm --filter @bpvs/db push",
		"prisma:seed": "pnpm --filter @bpvs/db seed",
		"prisma:studio": "pnpm --filter @bpvs/db studio",
		"publishContent:cms": "pnpm --filter @bpvs/cms publishContent",
		"pullData:cms": "pnpm --filter @bpvs/cms pullData",
		"start:admin": "pnpm --filter @bpvs/admin start",
		"start:cms": "pnpm --filter @bpvs/cms start",
		"start:db:local": "docker compose up -d --build postgres",
		"start:site": "pnpm --filter @bpvs/site start",
		"stop:db:local": "docker compose down",
		"temp:preinstall": "npx only-allow pnpm",
		"vercel-build": "next build apps/site"
	},
	"prettier": "@bpvs/eslint-config/prettier",
	"devDependencies": {
		"@bpvs/eslint-config": "workspace:*",
		"barrelsby": "^2.8.1",
		"eslint": "^8.56.0",
		"prettier": "^3.2.5",
		"prettier-plugin-packagejson": "^2.4.10",
		"tsconfig": "workspace:*",
		"typescript": "^5.3.3"
	},
	"packageManager": "pnpm@8.8.0",
	"prisma": {
		"schema": "./packages/db/prisma/schema.prisma"
	}
}
