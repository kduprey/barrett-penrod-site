{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "@bpvs/config": ["packages/config/src/index.ts"],
      "@bpvs/db": ["packages/db/src/index.ts"],
      "@bpvs/emails": ["packages/emails/emails/*"],
      "@bpvs/emails-temp": ["packages/emails-temp/src/index.ts"],
      "@bpvs/tailwind": ["packages/tailwind-config/src/index.ts"],
      "@bpvs/utils": ["packages/utils/src/index.ts"],
      "@bpvs/validation": ["packages/validation/src/index.ts"],
      "@bpvs/types": ["packages/types/src/index.ts"],
      "@bpvs/site/*": ["apps/site/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
