{
	"version": "1.0.0",
	"private": true,
	"author": "Kenton Duprey",
	"scripts": {
		"build": "turbo build",
		"build:admin": "pnpm --filter @bpvs/admin build",
		"build:cms": "pnpm --filter @bpvs/cms build",
		"build:site": "pnpm --filter @bpvs/site build",
		"cy:site": "pnpm --filter @bpvs/site cy:run",
		"db:local:studio": "vercel env pull && npm run start:db:local && npm run db:studio",
		"db:prod:studio": "vercel env pull --environment=production && npm run db:studio",
		"db:studio": "cd ./packages/db && dotenv -c -e ../../.env npx prisma studio",
		"dev:admin": "pnpm --filter @bpvs/admin dev",
		"dev:cms": "pnpm --filter @bpvs/cms dev",
		"dev:site": "pnpm --filter @bpvs/site dev",
		"postinstall": "pnpm --filter @bpvs/db generate",
		"publishContent:cms": "pnpm --filter @bpvs/cms publishContent",
		"pullData:cms": "pnpm --filter @bpvs/cms pullData",
		"start:admin": "pnpm --filter @bpvs/admin start",
		"start:cms": "pnpm --filter @bpvs/cms start",
		"start:db:local": "docker compose -f 'docker-compose.yml' up -d --build mongodb_container",
		"start:site": "pnpm --filter @bpvs/site start",
		"stop:db:local": "docker compose -f 'docker-compose.yml' down",
		"temp:preinstall": "npx only-allow pnpm",
		"test:ci": "pnpm --filter @bpvs/site test:ci",
		"vercel-build": "next build apps/site"
	},
	"prettier": "@bpvs/style-guide/prettier",
	"devDependencies": {
		"@bpvs/style-guide": "workspace:*",
		"barrelsby": "^2.8.1",
		"eslint": "^8.53.0",
		"prettier": "^3.0.3",
		"prettier-plugin-packagejson": "^2.4.6",
		"tsconfig": "workspace:*",
		"typescript": "^5.2.2"
	},
	"packageManager": "pnpm@8.10.2"
}
