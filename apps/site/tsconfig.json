{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["cypress", "node", "vitest/globals"],
    "typeRoots": ["./types"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "lib/analytics.ts",
    "cypress/e2e/tsconfig.json",
    "cypress/plugins/cy-ts-preprocessor.js",
    "node_modules/cypress",
    "cypress/**/*.ts",
    "./index.d.ts",
    "tailwind.config.ts"
  ],
  "exclude": ["node_modules"]
}
